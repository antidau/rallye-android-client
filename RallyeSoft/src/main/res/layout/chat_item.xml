<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/chat_row"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal">

	<ImageView
			android:id="@+id/sender_img_l"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:maxWidth="60dp"
			android:maxHeight="60dp"
			android:layout_marginLeft="3dp"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="3dp"/>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="left"
			android:background="@drawable/chat_bg"
			android:minHeight="60dp"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="3dp">

		<TextView
			android:id="@+id/msg_sender"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/abs__bright_foreground_disabled_holo_light"
			android:textStyle="bold"
			android:textSize="12sp"
			android:typeface="monospace"/>

		<ImageView
				android:id="@+id/msg_img"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:layout_gravity="center_vertical"
				android:maxWidth="160dp"
				android:maxHeight="160dp"
				android:scaleType="centerInside"
				android:layout_margin="16dp"/>

		<TextView
				android:id="@+id/msg"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="17sp"
				android:textIsSelectable="false"/>

		<TextView
				android:id="@+id/time_sent"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/abs__bright_foreground_disabled_holo_light"
				android:typeface="monospace"
				android:textSize="12sp"/>

	</LinearLayout>

	<ImageView
			android:id="@+id/sender_img_r"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:maxWidth="60dp"
			android:maxHeight="60dp"
			android:layout_marginRight="3dp"
			android:layout_marginTop="3dp"
			android:layout_marginBottom="3dp"/>

</LinearLayout>